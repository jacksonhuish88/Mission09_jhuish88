@{
}

@model IEnumerable<string>


<div class="d-grid gap-2">
    <h5 style="text-align:center">Book Categories</h5>
    <a asp-contorller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pagNum="1" class="btn btn-secondary">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1"
            class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")" style="margin-top:6px;">@c</a>
    }
</div>