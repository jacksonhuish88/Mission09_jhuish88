@{
}

@model Basket

<div>
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your basket:</b>
            @Model.Items.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
     }
    <a class="btn btn-sm btn bg-secondary navbar-btn" asp-page="/Order">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>