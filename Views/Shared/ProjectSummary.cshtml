@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            @Model.Title        
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>

    <ul>
        <li class="card-text p-1">Author: @Model.Author</li>
        <li class="card-text p-1">Publisher: @Model.Publisher</li>
        <li class="card-text p-1">ISBN: @Model.Isbn</li>
        <li class="card-text p-1">Classification: @Model.Classification</li>
        <li class="card-text p-1">Category: @Model.Category</li>
        <li class="card-text p-1">Pages: @Model.PageCount</li>
    </ul>


    <form style="border:none" method="post" asp-page="/Order">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span>
            <button type="submit" class="btn btn-success btn-sm float-left">Add to Basket</button>
        </span>
    </form>
</div>
